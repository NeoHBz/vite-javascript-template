{
  "name": "vite-javascript-template",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "A minimal Vite + React template with Tailwind CSS and modern tooling",
  "keywords": [
    "vite",
    "react",
    "tailwind",
    "template",
    "javascript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/neohbz/vite-javascript-template.git"
  },
  "bugs": {
    "url": "https://github.com/neohbz/vite-javascript-template/issues"
  },
  "homepage": "https://github.com/neohbz/vite-javascript-template#readme",
  "author": {
    "name": "NeoHBz",
    "email": "neohbz@gmail.com",
    "url": "https://neohbz.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "format:fix": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "preview": "vite preview",
    "setup": "node setup-template.js",
    "prepare": "husky",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-primitive": "^2.1.3",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.542.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "3",
    "vite": "^7.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
